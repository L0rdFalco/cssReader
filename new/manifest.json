{
    "name": "CSS Reader Copier",
    "description": "read and copy css in any element on a webpage",
    "version": "0.0.0.1",
    "manifest_version": 3,
    "icons": {
        "16": "./res/icon16.png",
        "24": "./res/icon24.png",
        "32": "./res/icon32.png",
        "48": "./res/icon48.png",
        "64": "./res/icon64.png",
        "128": "./res/icon128.png",
        "256": "./res/icon256.png",
        "512": "./res/icon512.png"
    },
    "action": {
        "default_icons": {
            "16": "./res/icon16.png",
            "24": "./res/icon24.png",
            "32": "./res/icon32.png",
            "48": "./res/icon48.png",
            "64": "./res/icon64.png",
            "128": "./res/icon128.png",
            "256": "./res/icon256.png",
            "512": "./res/icon512.png"
        },
        "default_title": "css reader"
    },
    "options_page": "./options/options.html",
    "background": {
        "service_worker": "bg.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "img/header.png",
                "img/body.png",
                "img/list.png",
                "img/footer.png",
                "img/bullet.png"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "scripting",
        "contextMenus"
    ],
    "host_permissions": [
        "*://*/*"
    ]
}