{
   "background": {
      "page": "background.html"
   },
   "browser_action": {
      "default_icon": "img/16.png",
      "default_title": "CSSViewer"
   },
   "description": "A simple CSS property viewer.",
   "icons": {
      "16": "img/16.png",
      "22": "img/22.png",
      "24": "img/24.png",
      "32": "img/32.png",
      "48": "img/48.png"
   },
   "manifest_version": 2,
   "name": "1 CSSViewer",
   "options_page": "option.html",
   "permissions": [
      "tabs",
      "http://*/*",
      "https://*/*",
      "file://*/*",
      "contextMenus"
   ],
   "version": "1.7",
   "web_accessible_resources": [
      "img/header.png",
      "img/body.png",
      "img/list.png",
      "img/footer.png",
      "img/bullet.png"
   ]
}
